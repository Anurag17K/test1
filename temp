name: Deploy to Elastic Beanstalk

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # Checkout the code
      - name: Checkout code
        uses: actions/checkout@v4

      # Set up Python
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      # Install dependencies (including system packages for mysqlclient)
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # Zip the application code (excluding .git)
      - name: Zip application
        run: |
          zip -r application.zip . -x "*.git*"

      # List files in the current directory to confirm the application.zip exists
      - name: List files in the current directory
        run: ls -l

      # Deploy to Elastic Beanstalk
      - name: Deploy to Elastic Beanstalk
        uses: einaregilsson/beanstalk-deploy@v22
        with:
          aws_access_key: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws_secret_key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws_session_token: ${{ secrets.AWS_SESSION_TOKEN }}
          application_name: Book-Market
          environment_name: ebs1-env
          version_label: v-${{ github.run_number }}
          region: us-east-1
          deployment_package: application.zip
          existing_bucket_name: your-existing-bucket-name
