pipeline {
    agent any

    environment {
        // EB app and environment names
        EB_APP_NAME = "lostandfound-docker"
        EB_ENV_NAME = "lostandfound-docker-env"
        REGION = "us-east-1"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: '690e0660-343f-4380-a709-779361de797a',
                    url: 'https://github.com/x24199991/lostfound-devops.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest'  // Or 'python manage.py test' if you prefer
            }
        }

        stage('Deploy to Elastic Beanstalk') {
            steps {
                // Initialize EB (first time only, safe to run every time)
                sh "eb init ${EB_APP_NAME} --platform docker --region ${REGION} --quiet"

                // Deploy to EB environment
                sh "eb deploy ${EB_ENV_NAME} --region ${REGION} --quiet"
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed. Check the logs."
        }
    }
}
