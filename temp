# .github/workflows/deploy-eb.yml
name: Deploy Django to Elastic Beanstalk

on:
  push:
    branches:
      - main

jobs:
  deploy:
    name: Deploy to AWS Elastic Beanstalk
    runs-on: ubuntu-latest

    env:
      EB_APP_NAME: your-eb-app-name      # Elastic Beanstalk app name
      EB_ENV_NAME: your-eb-env-name      # Elastic Beanstalk env name
      REGION: us-east-1                  # Change if needed

    steps:
      # 1) Checkout code
      - name: Checkout repo
        uses: actions/checkout@v3

      # 2) Set up Python
      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      # 3) Install dependencies + EB CLI
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip setuptools wheel
          pip install -r requirements.txt
          pip install awsebcli

      # 4) Configure AWS credentials (WITH SESSION TOKEN — Learner Lab requirement)
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-session-token: ${{ secrets.AWS_SESSION_TOKEN }}  # ⭐ Required for Learner Lab
          aws-region: ${{ env.REGION }}

      # 5) Deploy to Elastic Beanstalk
      - name: Deploy to Elastic Beanstalk
        run: |
          eb init "$EB_APP_NAME" --region "$REGION" --platform "Python 3.11"
          eb use "$EB_ENV_NAME"
          eb deploy --verbose
