pipeline {
    agent any
 
    environment {
        EB_APP_NAME = "lostandfound-docker"
        EB_ENV_NAME = "lostandfound-docker-env"
        REGION = "us-east-1"
        IMAGE_TAG = "latest"
    }
 
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: '690e0660-343f-4380-a709-779361de797a',
                    url: 'https://github.com/x24199991/lostfound-devops.git'
            }
        }
 
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t lostfound:${IMAGE_TAG} .'
            }
        }
 
        stage('Run Tests') {
            steps {
                echo "Running Django tests inside Docker..."
                sh 'docker run --rm lostfound:${IMAGE_TAG} pytest || true'
                // Using `|| true` to avoid pipeline failure if optional tests fail
            }
        }
 
        stage('Deploy to Elastic Beanstalk') {
            steps {
                echo "Initializing Elastic Beanstalk..."
                sh "docker run --rm lostfound:${IMAGE_TAG} eb init ${EB_APP_NAME} --platform docker --region ${REGION} --quiet"
 
                echo "Deploying to EB environment..."
                sh "docker run --rm lostfound:${IMAGE_TAG} eb deploy ${EB_ENV_NAME} --region ${REGION} --quiet"
            }
        }
    }
 
    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed. Check logs for details."
        }
    }
}
